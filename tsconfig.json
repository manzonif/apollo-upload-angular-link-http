{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "lib": ["es6", "dom", "esnext"],
    "types": ["jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "build" 
  ]
}
